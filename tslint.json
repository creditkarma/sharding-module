{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,
    "object-literal-sort-keys": false,
    "no-console": [
      false
    ],
    "no-var-requires": false,
    "semicolon": [
      true,
      "never"
    ],
    "array-type": [
      true,
      "generic"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ]
  }
}
